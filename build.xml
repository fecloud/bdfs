<?xml version="1.0" encoding="UTF-8"?>
<project name="bdfs" basedir=".">

	<property name="src.dir" location="src" />
	<property name="libs.dir" location="libs" />
	<property name="build.dir" location="build" />
	<property name="dist.dir" location="${build.dir}/dist" />
	<property name="dest.dir" location="${build.dir}/classes" />

	<property name="src.server.dir" location="server" />
	<property name="dest.server.dir" location="${dest.dir}/server" />
	<property name="dist.server" location="${dist.dir}/server.jar" />

	<property name="src.servlet.dir" location="servlet" />
	<property name="dest.servlet.dir" location="${dest.dir}/servlet" />
	<property name="dist.servlet" location="${dist.dir}/servlet.jar" />
	<property name="dist.servlet.war" location="${dist.dir}/ROOT.war" />


	<!--编译相关参数 -->
	<property name="java.encoding" value="UTF-8" />
	<property name="verbose" value="false" />

	<target name="clean">
		<delete dir="${build.dir}" />
	</target>
	<target name="-pre-compiler">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${dist.dir}" />
		<mkdir dir="${dest.dir}" />
	</target>

	<target name="compiler-server" depends="-pre-compiler">
		<mkdir dir="${dest.server.dir}" />
		<echo level="info">compiler start</echo>
		<javac srcdir="${src.server.dir}" destdir="${dest.server.dir}" encoding="${java.encoding}" includeantruntime="false" verbose="${verbose}" debug="true">
			<classpath>
				<fileset dir="${libs.dir}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
		<echo level="info">compiler finish</echo>
	</target>

	<target name="server" depends="compiler-server">
		<echo level="info">package jar start</echo>
		<jar destfile="${dist.server}" basedir="${dest.server.dir}">
		</jar>
		<echo level="info">package jar finish</echo>
	</target>

	<target name="compiler-servlet">
		<mkdir dir="${dest.servlet.dir}" />
		<echo level="info">compiler start</echo>
		<javac srcdir="${src.servlet.dir}" destdir="${dest.servlet.dir}" encoding="${java.encoding}" includeantruntime="false" verbose="${verbose}" debug="true">
			<classpath>
				<fileset dir="${libs.dir}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
		<echo level="info">compiler finish</echo>
	</target>

	<target name="package-servlet" depends="compiler-servlet">
		<echo level="info">package jar start</echo>
		<jar destfile="${dist.servlet}" basedir="${dest.servlet.dir}">
		</jar>
		<echo level="info">package jar finish</echo>
	</target>

	<target name="servlet" depends="package-servlet">
		<war destfile="${dist.servlet.war}" webxml="${src.servlet.dir}/web.xml">
			<lib dir="${libs.dir}">
				<exclude name="servlet-api.jar" />
			</lib>
			<lib file="${dist.servlet}">
			</lib>
			<fileset dir="${src.servlet.dir}">
				<include name="index.html" />
			</fileset>
		</war>
	</target>

	<target name="all" depends="clean,server,servlet">
	</target>

</project>
